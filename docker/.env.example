# ============================================
# SPIRITBLADE - Environment Variables Template
# ============================================
# Copy this file to .env and fill in your actual secrets.
# NEVER commit the .env file to version control!

# ============================================
# Docker Configuration
# ============================================
DOCKER_USERNAME=your-docker-username
VERSION=0.2.0

# ============================================
# Database Configuration (MySQL)
# ============================================
MYSQL_ROOT_PASSWORD=your-secure-db-password-here
MYSQL_DATABASE=spiritblade
MYSQL_USER=spiritblade
MYSQL_PASSWORD=your-mysql-user-password-here

# Spring Boot Database Configuration
SPRING_DATASOURCE_URL=jdbc:mysql://localhost:3306/spiritblade?useSSL=false&serverTimezone=UTC&allowPublicKeyRetrieval=true
SPRING_DATASOURCE_USERNAME=root
SPRING_DATASOURCE_PASSWORD=your-secure-db-password-here
SPRING_DATASOURCE_DRIVER_CLASS_NAME=com.mysql.cj.jdbc.Driver
SPRING_JPA_DATABASE_PLATFORM=org.hibernate.dialect.MySQL8Dialect
SPRING_JPA_HIBERNATE_DDL_AUTO=update

# ============================================
# Server Configuration (HTTPS/SSL)
# ============================================
SERVER_PORT=443
SERVER_SSL_ENABLED=true
SERVER_SSL_KEY_STORE=classpath:keystore.jks
SERVER_SSL_KEY_STORE_PASSWORD=spiritblade
SERVER_SSL_KEY_STORE_TYPE=JKS
SERVER_SSL_KEY_ALIAS=spiritblade

# ============================================
# Security Configuration (JWT)
# ============================================
# Use a strong random string for JWT_SECRET (e.g., openssl rand -base64 64)
JWT_SECRET=your-very-long-and-secure-jwt-secret-here-minimum-256-bits
JWT_EXPIRATION=86400000

# ============================================
# External API Keys
# ============================================
# Riot Games API Key (get it from https://developer.riotgames.com/)
RIOT_API_KEY=RGAPI-your-riot-api-key-here

# Google AI API Key (Gemini) (get it from https://ai.google.dev/)
GOOGLE_AI_API_KEY=your-google-ai-api-key-here

# ============================================
# MinIO Object Storage Configuration
# ============================================
MINIO_ENDPOINT=http://localhost:9000
MINIO_ACCESS_KEY=your-minio-access-key
MINIO_SECRET_KEY=your-minio-secret-key-minimum-8-chars
MINIO_BUCKET_NAME=spiritblade-uploads
MINIO_REGION=us-east-1

# ============================================
# Logging Configuration
# ============================================
LOGGING_LEVEL_COM_TFG_TFG=INFO
LOGGING_LEVEL_ORG_SPRINGFRAMEWORK=INFO
LOGGING_LEVEL_ORG_HIBERNATE=INFO
LOGGING_LEVEL_ORG_HIBERNATE_SQL=DEBUG
LOGGING_LEVEL_ORG_HIBERNATE_BASICBINDER=TRACE

# ============================================
# File Upload Configuration
# ============================================
SPRING_SERVLET_MULTIPART_MAX_FILE_SIZE=10MB
SPRING_SERVLET_MULTIPART_MAX_REQUEST_SIZE=10MB

# ============================================
# Frontend Configuration (if applicable)
# ============================================
# These can be used to configure the Angular app at build time
# FRONTEND_API_URL=https://localhost:443/api/v1

